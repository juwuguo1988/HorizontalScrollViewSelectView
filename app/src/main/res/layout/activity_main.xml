<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.administrator.mynametypeselect.activity.MainActivity">

  <LinearLayout
    android:id="@+id/ll_medic_type_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <HorizontalScrollView
      android:id="@+id/hlv_medic_category"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fadingEdge="none"
      android:overScrollMode="never"
      android:scrollbars="none">

      <LinearLayout
        android:id="@+id/ll_medic_category_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
      </LinearLayout>
    </HorizontalScrollView>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginLeft="11dp"
      android:layout_marginRight="11dp"
      android:background="@color/cut_line">
    </View>

    <android.support.v4.view.ViewPager
      android:id="@+id/vp_medic_type"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    </android.support.v4.view.ViewPager>
  </LinearLayout>

</android.support.constraint.ConstraintLayout>
